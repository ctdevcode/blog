<div class="container-sm">
	<div class="card">
		<div class="card-header">
			<div class="row justify-content-center">
				<div class="col-2 text-center">
						USER PROFILE<br>
						USERNAME
				</div>
				<div class="col-8">
					<strong>Title: </strong><%= @post.title %><br>
					<strong>Body: </strong><%= @post.body %><br>
				</div>
				<div class="col-2 d-flex justify-content-end align-items-center">
					<%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary btn-height me-1" %>
					<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: "btn btn-danger btn-height me-1" %>
				</div>
			</div>
		</div>
	</div>
</div>